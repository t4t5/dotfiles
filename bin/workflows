#!/bin/bash

order=(
  "VPN toggle"
  "Toggle AirPods"
)

declare -A commands
commands["VPN toggle"]="vpn toggle"
commands["Toggle AirPods"]="airpods toggle"

choice=$(printf '%s\n' "${order[@]}" | menu -p "Workflow:")

[[ -n "$choice" ]] && eval "${commands[$choice]}" 2>&1 | xargs -I{} notify-send "$choice" "{}"
