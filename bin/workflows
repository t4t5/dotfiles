#!/bin/bash

declare -A commands
commands["VPN - Toggle (on/off)"]="vpn toggle"
commands["VPN - Switch country..."]="GUI=1 vpn connect"
commands["AirPods - Toggle (on/off)"]="airpods toggle"

choice=$(printf '%s\n' "${!commands[@]}" | menu -p "Workflow:")

[[ -n "$choice" ]] && eval "${commands[$choice]}" 2>&1 | xargs -I{} notify-send "$choice" "{}"
