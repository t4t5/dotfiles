{
  "name": "__name__",
  "scripts": {
    "dev": "npm run node & npm run deploy",
    "node": "npx hardhat node",
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=1 npx hardhat test",
    "coverage": "npx hardhat coverage",
    "format": "npx prettier --write 'contracts/**/*.sol'",
    "lint": "npx solhint contracts/**.sol",
    "slither": "slither .",
    "docs": "npx solidity-docgen --solc-module solc-0.8 -o build/docs",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:ropsten": "npx hardhat run scripts/deploy.ts --network ropsten",
    "verify:ropsten": "npx hardhat verify --network ropsten"
  }
}
